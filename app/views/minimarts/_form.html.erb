<%= form_for(@minimart) do |f| %>
<%= f.hidden_field :user_id, value: @minimart.user.id %>

<%= f.label :name, "Minimart Name" %><br>
<%= f.text_field :name %><br>

<%= f.label :address, "Address" %><br>
<%= f.text_field :address %><br>

<%= f.label :state, "State" %><br>
<%= f.text_field :state %><br>

<%= f.label :sodamachine, "Soda Machine Details" %><br>
<%= f.text_field :sodamachine %><br>

<%= f.label :description, "Description" %><br>
<%= f.text_area :description %><br>

<%= f.submit %>

<% end %>


