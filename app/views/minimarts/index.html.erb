<h1> Minimarts </h1>

<h4><%= flash[:notice] if flash[:notice] %></h4>

<%= form_tag(state_minimarts_path, method: :post) do %>
<%= select_tag(:state, options_for_select(Minimart.all.map{|m| m.state})) %>
<%= submit_tag ("Submit") %>
<% end %>

<% @minimarts.each do |f| %>
<h2><%= link_to f.name, minimart_path(f) %></h2>
<h3><%= f.state %></h3>
<img src="<%= f.image %>", alt="Minimart Image">
<% end %>

