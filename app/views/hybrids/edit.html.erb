<h1>Modify the Hybrid</h1>

<h4><%= @error %></h4>

<%= form_for(@hybrid) do |f| %>

<%= f.label :name, "Hybrid Name" %><br>
<%= f.text_field :name %><br>

<%= f.label :species, "Species" %><br>
<%= f.text_field :species %><br>

<%= f.label :personality, "Hybrid Personality"%><br>
<%= f.text_field :personality %><br>

<%= f.label :biography, "Hybrid Biography" %><br>
<%= f.text_area :biography %><br>

<%= f.label :image, "Hybrid Image" %><br>
<%= f.text_field :image %><br>

<%= f.submit %>

<% end %>

