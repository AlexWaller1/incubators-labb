<h1><%= @hybrid.name %></h1>
<h2><%= @hybrid.species %></h2>
<img src="<%= @hybrid.image %>" alt="Hybrid Image">
<p><%= @hybrid.personality %></p>
<p><%= @hybrid.biography %></p>
<%= link_to "Hybrid's Friends", hybrid_friends_path(@hybrid) %>
<%= link_to "Places Hybrid Has Been", hybrid_places_path(@hybrid) %>

<% if current_user %>
 <%= link_to "Submit New Friend", new_hybrid_friend_path(@hybrid) %>
 <%= link_to "Submit New Place",  new_hybrid_place_path(@hybrid) %>
 <%= link_to "Modify the Hybrid", edit_hybrid_path(@hybrid) %>
<% end %>