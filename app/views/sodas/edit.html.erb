<h1> Edit Soda Information <h1>

<%= form_for(@soda) do |f| %>
<%= f.hidden_field :user_id, value: @soda.user.id %>

<%= f.label :name, "Name of Soda" %><br>
<%= f.text_field :name %><br>

<%= f.label :company, "Company" %><br>
<%= f.text_field :company %><br>

<%= f.label :availability, "Availability" %><br>
<%= f.text_field :availability %><br>

<%= f.label :description. "Descripton" %><br>
<%= f.text_area :description %><br>

<% end %>