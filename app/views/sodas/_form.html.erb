<%= form_for([@soda.minimart, @soda]) do |f| %>
<%= f.hidden_field :minimart_id, value: @soda.minimart_id %>

<%= f.label :name, "Name" %><br>
<%= f.text_field :name %><br>

<%= f.label :company, "Company" %><br>
<%= f.text_field :company %><br>

<%= f.label :availability, "Availability" %><br>
<%= f.text_field :availability %><br>

<%= f.label :description, "Description" %><br>
<%= f.text_area :description %><br>

<%= f.submit %>

<% end %>