<h1>Welcome to Antibi, Please Apply Here</h1>

<h3><%= @error %></h3>
  

<%= form_for @user, url: signup_path, method: :post do |f| %>
     <div>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
     </div>
     <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
     </div>
  <%= f.submit "Signup" %>
<% end %>