<h1>Login to Brief Antibi on Hybrid Activity</h1>


<%if @error %>
  <h1> <%= @error %> </h1>
<%end %>

<%= form_tag('/users', method: :post) do %>
  <div>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag :username %>
  </div>
  <div>
   <%= label_tag(:password_digest, "Password") %>
    <%= password_field_tag :password_digest %>
  </div>
  <%= submit_tag("Login") %>
<% end %>