<h1>Login to Brief Antibi on Hybrid Activity</h1>


<%if @error %>
  <h1> <%= @error %> </h1>
<%end %>

<%= form_for @user, url: login_path do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Login" %>
<% end %>